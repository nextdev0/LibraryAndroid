<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="activity"
      type="com.nextstory.sample.ui.activity.MainActivity" />

  </data>

  <com.nextstory.widget.SafeArea
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test1()}"
          android:text="여러 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test2()}"
          android:text="DataBindingFlowLayout 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test3()}"
          android:text="IntentBuilder 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test4(v)}"
          android:text="RxPermission 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test5(v)}"
          android:text="Blur 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test6(v)}"
          android:text="libgdx 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test7(v)}"
          android:text="imagepicker single 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

        <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{v -> activity.test8(v)}"
          android:text="imagepicker multiple 테스트"
          android:textAllCaps="false"
          tools:ignore="HardcodedText" />

      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

  </com.nextstory.widget.SafeArea>

</layout>
