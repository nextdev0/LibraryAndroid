<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.nextstory.sample.ui.activity.MainActivity" />

    </data>

    <com.nextstory.widget.LoadingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loading="@{activity.progress}"
        app:loadingViewId="@id/loading">

        <FrameLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="loading"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.nextstory.widget.StatusBarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{v -> activity.test1()}"
                android:text="여러 테스트"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{v -> activity.test2()}"
                android:text="DataBindingFlowLayout 테스트"
                android:textAllCaps="false"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </com.nextstory.widget.LoadingLayout>

</layout>
