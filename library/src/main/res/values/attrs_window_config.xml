<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="WindowConfig">
    <attr name="android:padding" />
    <attr name="android:paddingHorizontal" />
    <attr name="android:paddingVertical" />
    <attr name="android:paddingLeft" />
    <attr name="android:paddingStart" />
    <attr name="android:paddingTop" />
    <attr name="android:paddingRight" />
    <attr name="android:paddingEnd" />
    <attr name="android:paddingBottom" />

    <attr name="wcfg_type" format="enum">
      <!-- 기본 -->
      <enum name="normal" value="0" />

      <!-- 시스템 UI 확장: 상태바, 내비게이션바 영역에 UI를 배치할 수 있습니다. -->
      <enum name="extended" value="1" />

      <!-- 전체화면 -->
      <enum name="fullscreen" value="2" />
    </attr>

    <attr name="wcfg_statusBarColor" format="color" />
    <attr name="wcfg_navigationBarColor" format="color" />
    <attr name="wcfg_navigationBarDividerColor" format="color" />

    <attr name="wcfg_useStatusBarDarkIcon" format="boolean" />
    <attr name="wcfg_useNavigationBarDarkIcon" format="boolean" />
  </declare-styleable>

</resources>
