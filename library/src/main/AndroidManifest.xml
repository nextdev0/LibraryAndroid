<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <application
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:usesCleartextTraffic="true"
    tools:targetApi="n">

    <provider
      android:name=".util.UtilitiesInitializationProvider"
      android:authorities="${applicationId}.utils-initializer"
      android:exported="false">
      <meta-data
        android:name="com.nextstory.field.SaveInstanceStateFieldHelper"
        android:value="empty" />
      <meta-data
        android:name="com.nextstory.util.LifecycleCallbacks"
        android:value="empty" />
      <meta-data
        android:name="com.nextstory.util.ActivityIntentBuilderInitializer"
        android:value="empty" />
      <meta-data
        android:name="com.nextstory.util.FragmentBuilderInitializer"
        android:value="empty" />
      <meta-data
        android:name="com.nextstory.widget.util.SafeAreaHelper"
        android:value="empty" />
    </provider>

    <provider
      android:name="androidx.core.content.FileProvider"
      android:authorities="${applicationId}.provider"
      android:exported="false"
      android:grantUriPermissions="true">
      <meta-data
        android:name="android.support.FILE_PROVIDER_PATHS"
        android:resource="@xml/file_provider_paths" />
    </provider>

    <activity
      android:name="com.canhub.cropper.CropImageActivity"
      android:configChanges="keyboard|keyboardHidden"
      android:exported="true"
      android:screenOrientation="unspecified"
      android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar.Bridge"
      android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

    <activity
      android:name=".util.RxImagePicker$InternalActivity"
      android:configChanges="keyboard|keyboardHidden"
      android:exported="true"
      android:screenOrientation="unspecified"
      android:theme="@style/Theme.Activity.Translucent"
      android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />

  </application>

</manifest>
